# Albion API + n8n Development Environment Example
# Copy this file to .env and adjust values as needed.
# Lines starting with # are comments and ignored.

# ----- Core API -----
MONGODB_URI=mongodb://root:rootpassword@mongo:27017/albion_dev?authSource=admin
# If you want to use MongoDB Atlas instead, comment the line above and set:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<db>?retryWrites=true&w=majority

PORT=8800
NODE_ENV=development
ENABLE_TLS=true

# Secure inbound webhook from n8n -> albion-server
# Generate a random token (e.g. with `openssl rand -hex 16` or any password generator)
N8N_WEBHOOK_TOKEN=c31d3f78-aadf-4db1-8074-c7674335c601

# ----- n8n Basic Auth (applies to the n8n container) -----
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123
N8N_HOST=n8n
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
GENERIC_TIMEZONE=Asia/Bangkok

# ----- Postgres for n8n -----
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8npassword
POSTGRES_DB=n8n

# ----- Optional OAuth / Google (placeholders) -----
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# JWT_SECRET=

# After editing .env you can (re)start:
# docker compose up -d --build

